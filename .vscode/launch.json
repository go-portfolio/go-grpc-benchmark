{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Server",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/server",
      "args": ["-debug", "-verbose"]
    },
    {
      "name": "Debug Client",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/client",
      "args": ["-debug", "-verbose"]
    }
  ],
  "compounds": [
    {
      "name": "Debug Server + Client",
      "configurations": ["Debug Server", "Debug Client"]
    }
  ]
}
